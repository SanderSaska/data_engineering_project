
services:
  postgres:
    image: postgres:15
    environment:
      POSTGRES_USER: postgres_user
      POSTGRES_PASSWORD: postgres_pass
      POSTGRES_DB: postgres_db
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  oracle:
    image: gvenzl/oracle-xe
    environment:
      ORACLE_PASSWORD: oracle_pass
    ports:
      - "1521:1521"
      
  mysql:
    image: mysql:8
    environment:
      MYSQL_ROOT_PASSWORD: mysql_pass
      MYSQL_DATABASE: mysql_db
    ports:
      - "3306:3306"


  duckdb:
    container_name: duckdb
    build:
      context: ./docker/duckdb  # Path to DuckDB Dockerfile
    volumes:
      - ./raw_data:/app/data  # Mount raw_data directory for persistent storage
    stdin_open: true
    tty: true
    #networks:
    #  - data_network

  airflow:
    build: ./airflow
    environment:
      - AIRFLOW__CORE__EXECUTOR=LocalExecutor
      - AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres_user:postgres_pass@postgres/postgres_db
    ports:
      - "8080:8080"
    volumes:
      - ./airflow/dags:/opt/airflow/dags
      - ./airflow/plugins:/opt/airflow/plugins

  neo4j:
    image: neo4j:5
    environment:
      NEO4J_AUTH: "neo4j/neo4j_pass"
    ports:
      - "7474:7474"
      - "7687:7687"
    volumes:
      - ./neo4j/import:/var/lib/neo4j/import

  iceberg:
    image: apache/iceberg:latest
    volumes:
      - ./iceberg:/iceberg
    environment:
      ICEBERG_CATALOG_TYPE: hadoop
    ports:
      - "9083:9083"

volumes:
  postgres_data:
